<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:id="@+id/grid"

    >
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imageforhomeheader">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/eme"
            android:id="@+id/igmbuttonMenu"
            android:contentDescription="danh mục"
            ></ImageButton>


        <androidx.appcompat.widget.SearchView
            android:layout_width="280dp"
            android:layout_height="30dp"

            android:layout_gravity="left|center"
            android:hint="Tìm kiếm"
            android:background="@drawable/khungbaosearchview"
            android:id="@+id/srview"
            android:backgroundTint="@color/white"
            ></androidx.appcompat.widget.SearchView>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/gro"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/igmbuttonGro"
            android:contentDescription="gio hàng">
        </ImageButton>
    </Toolbar>
</LinearLayout>