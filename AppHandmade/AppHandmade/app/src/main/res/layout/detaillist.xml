<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.home.MainActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <!-- Header Layout -->

        <!-- Hình nền -->
        <LinearLayout
            android:id="@+id/gridhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imageforhomeheader"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <!-- Nút Menu -->

            <!-- TextView Tài Khoản -->

            <ImageButton
                android:id="@+id/igmbuttonMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:background="@android:color/transparent"
                android:padding="4dp"

                android:src="@drawable/quaylai"
                tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Tài khoản"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <!-- Icon Giỏ hàng -->

            <!-- Icon Bình luận -->
            <ImageButton
                android:id="@+id/igmbuttonGro"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cart"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/igmbuttonaccoun"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/comments"
                tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
